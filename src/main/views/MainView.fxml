<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.MainController">

    <HBox>
        <Label alignment="BASELINE_CENTER" maxHeight="1.7976931348623157E308" text="Select the reference image:" />
        <Button fx:id="selectFileButton" onAction="#bttFileClicked" text="Select image">
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin></Button>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </HBox>
    <HBox>
        <Label alignment="BASELINE_CENTER" maxHeight="1.7976931348623157E308" text="Select images directory:">
         <HBox.margin>
            <Insets />
         </HBox.margin></Label>
        <Button fx:id="selectDirectoryButton" onAction="#bttDirectoryClicked" text="Select directory">
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin></Button>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </HBox>

    <BarChart fx:id="barChart">
        <xAxis>
            <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT" />
        </yAxis>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </BarChart>
    
</VBox>

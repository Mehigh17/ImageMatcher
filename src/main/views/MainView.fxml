<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.MainController">

    <HBox>
        <Label alignment="BASELINE_CENTER" maxHeight="1.7976931348623157E308" text="Select the reference image:" />
        <Button fx:id="selectFileButton" onAction="#bttFileClicked" text="Select image">
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin></Button>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </HBox>
    <HBox>
        <Label alignment="BASELINE_CENTER" maxHeight="1.7976931348623157E308" text="Select images directory:">
         <HBox.margin>
            <Insets />
         </HBox.margin></Label>
        <Button fx:id="selectDirectoryButton" onAction="#bttDirectoryClicked" text="Select directory">
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin></Button>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </HBox>

    <fx:include fx:id="resultView" source="ResultView.fxml" />

    <Button fx:id="computeButton" maxWidth="1.7976931348623157E308" onAction="#bttComputeClicked" text="Compute Closest Image" />
    
</VBox>
